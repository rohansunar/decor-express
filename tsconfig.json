{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "types": ["jest", "reflect-metadata"]
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}
